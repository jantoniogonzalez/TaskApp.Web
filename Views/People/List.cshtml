@{
}

@model List<TaskApp.Web.Models.Entities.Person>

<h1>People</h1>

<a asp-controller="People" asp-action="Add">Add Person</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th> </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.Name</td>
                <td>@person.Email</td>
                <td>@person.Phone</td>
                <td><a asp-controller="People" asp-action="Edit" asp-route-id="@person.Id">Edit</a></td>
                <td><a asp-controller="People" asp-action="Delete" asp-route-id="@person.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>